datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  MANAGER
  CUSTOMER
}

enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  role          UserRole  @default(CUSTOMER)
  rentals       Rental[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Car {
  id            String     @id @default(cuid())
  make          String
  model         String
  year          Int
  color         String
  dailyRate     Float
  status        CarStatus  @default(AVAILABLE)
  licensePlate  String     @unique
  rentals       Rental[]
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Rental {
  id            String   @id @default(cuid())
  userId        String
  carId         String
  startDate     DateTime
  endDate       DateTime
  totalCost     Float
  status        String   @default("ACTIVE")
  
  user          User     @relation(fields: [userId], references: [id])
  car           Car      @relation(fields: [carId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

